\definecolor{frametitleleftgradient}{rgb}{.05,.15,.4}
\definecolor{frametitlerightgradient}{rgb}{.61,.7,.84}
\definecolor{frametitletopgradient}{rgb}{0.82,0.87,0.98}
\definecolor{frametitlebottomgradient}{rgb}{0.82,0.83,0.85}
\definecolor{framefoottopgradient}{rgb}{0.84,0.84,0.85}
