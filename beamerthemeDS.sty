\pgfdeclarehorizontalshading[frametitle.bg,frametitle right.bg]{beamer@frametitleshade}{5ex}{%
  color(0pt)=(frametitle.bg);
  color(\paperwidth)=(frametitle right.bg)}

\pgfdeclarehorizontalshading{beamer@spacer}{0.5pt}{%
  color(0pt)=(gray);
  color(\paperwidth)=(gray)}

\pgfdeclareverticalshading{beamer@frametitleverticalshade}{\paperwidth}{%
  color(0pt)=(frametitletopgradient);
  color(3pt)=(frametitlebottomgradient)}

\pgfdeclareverticalshading{beamer@framefootshade}{\paperwidth}{%
  color(0pt)=(framefootbottomgradient);
  color(4ex)=(framefoottopgradient)}

\defbeamertemplate*{frametitle}{dsgroup}
{%
  \vskip-2pt%
  \usebeamercolor{frametitle right}%
  \usebeamerfont{frametitle right}%
  \hbox{\hskip-\Gm@lmargin\pgfuseshading{beamer@frametitleshade}%
        \hskip-\paperwidth%
        %\vskip -20pt%
	\begin{minipage}[b][5ex][c]{\textwidth}
	  \usebeamercolor{author in head/foot}
	  \hskip2ex\textbf{\insertframetitle}%
        \end{minipage}%
  }%
  \nointerlineskip
  \hbox{\hskip-\Gm@lmargin\pgfuseshading{beamer@spacer}}%
  \nointerlineskip
  \hbox{\hskip-\Gm@lmargin\pgfuseshading{beamer@frametitleverticalshade}}%
  \nointerlineskip
  \hbox{\hskip-\Gm@lmargin\pgfuseshading{beamer@spacer}}%
}

\defbeamertemplate*{frametitle}{empty}
{%
    \begin{minipage}[b][5ex][c]{\textwidth}
      \usebeamercolor{author in head/foot}
      \hskip2ex\textbf{\insertframetitle}%
        \end{minipage}%
}

